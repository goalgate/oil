<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28px"
            android:gravity="end">
            <ImageView
                android:id="@+id/network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:src="@drawable/no_network" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15px"
                android:src="@drawable/menubotton" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="71px"
                android:textColor="@color/primary_light"
                android:textSize="25sp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="83px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_QIYOUBIAOHAO"
                    android:layout_width="450px"
                    android:paddingLeft="10px"
                    android:layout_height="45px"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />


                <EditText
                    android:id="@+id/et_volume"
                    android:layout_width="450px"
                    android:layout_height="45px"
                    android:paddingLeft="10px"
                    android:layout_marginTop="30px"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_customer"
                    android:paddingLeft="10px"
                    android:layout_width="450px"
                    android:layout_height="45px"
                    android:layout_marginTop="30px"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_seller"
                    android:paddingLeft="10px"
                    android:layout_width="450px"
                    android:layout_height="45px"
                    android:layout_marginTop="30px"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="47px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_cancel" />

                    <Button
                        android:id="@+id/readcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/selector_readcard" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/recapture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_capture" />

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/selector_submit" />


                </LinearLayout>

            </LinearLayout>

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="614px"
                android:layout_height="459px"
                android:layout_marginLeft="40dp" />


        </LinearLayout>

        <TextView
            android:layout_marginTop="20px"
            android:textSize="24px"
            android:gravity="center"
            android:id="@+id/tv_tips"
            android:textColor="@color/tips_textColor"
            android:layout_width="match_parent"
            android:layout_height="60px" />

    </LinearLayout>


</RelativeLayout>